@model Topee.Models.favorite_goods

@{
    ViewBag.Title = "Delete";
}

<h2>刪除品項</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <img class="img-rounded img-responsive" src="@Model.Goods.url" width="150" />
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Goods.name)
        </dd>

        <dd style="color:red">
            NT$@Html.DisplayFor(model => model.Goods.price)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="確認" class="btn btn-default" /> |
            @Html.ActionLink("返回收藏列表", "Index")
        </div>
    }
</div>
